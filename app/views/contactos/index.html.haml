.container
  %h1 Listado de contactos SACIAN
  
  = link_to 'Descargar en formato Excel', contactos_path(format: :csv), :class => 'btn btn-primary'
  = link_to 'Salir', destroy_admin_session_path, :method => :delete, :class => 'btn btn-primary'
  
  %br
  
  %table.table.table-striped
    %thead
      %tr
        %th Nombre
        %th Telefono
        %th Email
        %th PaÃ­s
        %th Fecha
        %th
  
    - @contactos.each do |contacto|
      %tr
        %td= contacto.nombre
        %td= contacto.telefono
        %td= contacto.email
        %td= image_tag '/assets/countries-flags/flag-' + contacto.pais  + '.png', :class => 'flag'
        %td= contacto.created_at.strftime("%I:%M%p %d %b %Y")
        %td= link_to 'Eliminar', contacto, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-mini btn-danger'

  = will_paginate @contactos
